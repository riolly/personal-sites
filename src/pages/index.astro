<script>
  const h1 = document.querySelector("h1") as HTMLHeadingElement;
  const sectionBlog = document.querySelector("section#blog") as HTMLElement;
  const astronautWrap = document.querySelector(
    "button#astronaut-wrap",
  ) as HTMLButtonElement;
  const astronaut = document.querySelector(
    "div#astronaut",
  ) as HTMLButtonElement;
  const firstBlog = document.querySelector("a#blog-0") as HTMLAnchorElement;

  astronautWrap.addEventListener("click", () => {
    astronautWrap.classList.replace("init", "ignite");
    astronaut.classList.replace("init", "ignite");
    astronautWrap.classList.replace("idle", "ignite");
    astronaut.classList.replace("idle", "ignite");

    setTimeout(() => {
      astronautWrap.classList.replace("ignite", "launch");
      astronaut.classList.replace("ignite", "launch");
    }, 1000);
    setTimeout(() => {
      sectionBlog.scrollIntoView();
      firstBlog.focus();
    }, 1750);
  });

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          astronautWrap.classList.replace("launch", "idle");
          astronaut.classList.replace("launch", "idle");
        }
      });
    },
    { rootMargin: "0px", threshold: 1 },
  );

  observer.observe(h1);
</script>

<style lang="scss">
  $delay_h1web: 0.4s;
  $durat_h1web: 0.7s;
  $delay_h1evolve: $delay_h1web + $durat_h1web - 0.3s;
  $durat_h1evolve: 1s;
  $delay_h1fast: $delay_h1evolve + $durat_h1evolve - 0.4s;
  $durat_h1fast: 0.5s;
  $delay_pType: $delay_h1fast + $durat_h1fast + 0.2s;
  $durat_pType: 7.1s; // 142(char)×0.05(unit)
  $delay_astroInit: $delay_pType + $durat_pType - 4.5s;
  $durat_astroInit: 5s;
  $delay_astroWobble: $delay_astroInit + $durat_astroInit - 0.2s;
  $durat_astroWobble: 3s;
  $delay_dialogShow: $delay_astroWobble - 0.3s;
  $durat_dialogShow: 0.7s;
  $delay_dialogType: $delay_dialogShow + $durat_dialogShow - 0.5s;

  .lightSpeed_h1web {
    animation: lightSpeed $durat_h1web $delay_h1web ease-out backwards;
  }
  .lightSpeed_h1evolve {
    animation: lightSpeed $durat_h1evolve $delay_h1evolve ease-out backwards;
  }
  .lightSpeed_h1fast {
    animation: lightSpeed $durat_h1fast $delay_h1fast ease-out backwards;
  }

  .typing_p {
    /* font-family: monospace; */
    color: #0000;
    background: linear-gradient(-90deg, #cbd5e1 5px, #0000 0) 10px 0,
      linear-gradient(#e2e8f0 0 0) 0 0;
    background-size: calc(var(--n) * 0.8ch) 200%;
    -webkit-background-clip: padding-box, text;
    background-clip: padding-box, text;
    background-repeat: no-repeat;
    animation: blinking 0.05s $delay_pType var(--n) steps(1) backwards,
      typing calc(var(--n) * 0.05s) $delay_pType steps(var(--n)) both;
  }

  .typing_dialog {
    color: #0000;
    background: linear-gradient(-90deg, #94a3b8 5px, #0000 0) 10px 0,
      linear-gradient(black 0 0) 0 0;
    background-size: calc(var(--n) * 0.7ch) 200%;
    -webkit-background-clip: padding-box, text;
    background-clip: padding-box, text;
    background-repeat: no-repeat;
    animation: blinking 0.1s $delay_dialogType var(--n) steps(1) backwards,
      typing calc(var(--n) * 0.1s) $delay_dialogType steps(var(--n)) both;
  }

  // astronaut-wrap
  .group {
    .rotateInDownRight {
      animation: rotateInDownRight $durat_dialogShow $delay_dialogShow backwards;
    }
    .fadeIn {
      animation: fadeIn 1s calc($delay_dialogType + 0.5s) backwards;
    }
    &:not(:hover) .ping {
      animation: ping-m 1s cubic-bezier(0, 0, 0.2, 1) infinite;
    }
    &:hover .ping {
      animation: ping-l 1s cubic-bezier(0, 0, 0.2, 1) infinite;
    }
  }

  $durat_astroIdle: 1.6s;
  $delay_astroIdle: $durat_astroIdle - 0.1s;

  #astronaut-wrap {
    &.init {
      animation: zoomInUp $durat_astroInit $delay_astroInit backwards,
        wobbleX $durat_astroWobble $delay_astroWobble alternate ease-in-out
          infinite;
    }
    &.ignite {
      animation: wobbleX 0.5s alternate ease-in-out infinite;
    }
    &.launch {
      animation: scale 2s ease-out forwards,
        goingX 2s cubic-bezier(0.36, 0.73, 0.8, 0.97) forwards;
    }
    &.idle {
      animation: zoomInUp $durat_astroIdle both,
        wobbleX $durat_astroWobble $delay_astroIdle alternate ease-in-out
          infinite;
    }
  }

  #astronaut {
    &.init {
      animation: wobbleY 4s $delay_astroWobble alternate ease-in-out infinite;
    }
    &.ignite {
      animation: wobbleY 1s alternate ease-in-out infinite;
    }
    &.launch {
      animation: goingY 2s cubic-bezier(0.73, 0.02, 0, 0.99) forwards;
    }
    &.idle {
      animation: wobbleY 4s $delay_astroIdle alternate ease-in-out infinite;
    }
