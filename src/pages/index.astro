---
import { getCollection } from "astro:content";
import { Picture } from "@astrojs/image/components";

import Layout from "layouts/MainLayout.astro";
import StarsBg from "components/StarsBg.astro";

import EarthSvg from "assets/earth.astro";
import RocketAstronaut from "assets/rocket-astronaut.astro";
import PlanetLandscape from "assets/landscape.astro";
import DialogBox from "assets/dialog-box.astro";
import SocialLink from "assets/social-link.astro";
import StarsShine from "assets/stars-shine.astro";

import "styles/index.css";

const blogPosts = await getCollection("blog", ({ data }) => data.isFeatured);
---

<Layout
  title="Explore the Web Development Universe with Riolly"
  description="Unlock the true potential of web development with Riolly. From infrastructure to database management, from back-end solutions to front-end techniques, the cutting-edge tech stack that designed to elevate the user experience. Stay ahead of the curve and embark on a transformative journey into the ever-evolving world of web development with Riolly."
>
  <div class="absolute h-fit w-full overflow-clip">
    <StarsBg />

    <div id="bg-section-intro" class="relative h-[100lvh] w-full">
      <StarsShine className="min-w-[1536px]" />

      <EarthSvg
        class="absolute left-0 top-0 h-[28rem] -translate-x-1/2 -translate-y-1/2 -rotate-90 md:h-[36rem] lg:h-[40rem] xl:h-[48rem] 2xl:ml-20 2xl:h-[52rem]"
      />
      <div
        id="purple-gradient-br"
        class="absolute bottom-0 right-0 h-1/3 w-full bg-gradient-to-br from-transparent via-transparent to-indigo-900/80 md:w-3/4 lg:w-1/2"
      >
      </div>

      <div
        id="blackhole"
        class="absolute left-1/2 top-1/2 -ml-12 mt-4 h-fit w-[175%] -translate-x-1/2 -translate-y-1/2 overflow-clip md:-ml-40 md:w-[120%] lg:-ml-32 lg:w-[92%] xl:-ml-24 xl:w-[80%] 2xl:-ml-20 2xl:w-[60%]"
      >
        <svg class="-mt-16 -rotate-[15deg]" viewBox="0 0 800 800">
          <defs>
            <radialGradient id="radial-gradient">
              <stop offset="50%" stop-color="#1e293b" stop-opacity=".8"></stop>
              <stop offset="70%" stop-color="#334155" stop-opacity=".6"></stop>
              <stop offset="100%" stop-color="#0f172a" stop-opacity="0"></stop>
            </radialGradient>
          </defs>
          <g id="background">
            <ellipse
              rx="400"
              ry="250"
              cx="400"
              cy="400"
              fill="url(#radial-gradient)"
              style="mix-blend-mode:color-dodge"></ellipse>
          </g>
        </svg>
      </div>

      <button
        id="astronaut-wrap"
        aria-label="Explore articles"
        class="init group absolute -bottom-8 right-0 z-10 pl-24 pt-16 transition-transform hover:cursor-pointer md:mb-8 md:mr-12 lg:mr-8 xl:mr-16 2xl:mr-20"
      >
        <div id="astronaut" class="init">
          <div
            class="absolute -left-[5.5rem] -top-6 h-24 -rotate-6 md:-left-[6rem] md:h-[6.5rem]"
          >
            <div class="fadeIn absolute h-full">
              <DialogBox class="ping h-full" />
            </div>
            <DialogBox
              class="rotateInDownRight absolute h-full origin-bottom-right"
            />
            <div
              class="absolute left-4 top-1 w-24 -rotate-2 group-hover:translate-y-3 md:left-5 md:top-1.5 md:group-hover:translate-y-4"
            >
              <p
                class={`text-bold font-head before:text-3xl text-black before:visible before:group-hover:content-["Ready??"] before:group-focus:content-["Let's_GO!_"]`}
              >
                <span
                  style="--n:28"
                  class={`typing_dialog group-focus:after:opacity-0 group-hover:after:invisible after:leading-5 after:text-2xl after:content-["Right_here,_hop_on!!"] `}
                >
                </span>
              </p>
            </div>
          </div>
          <RocketAstronaut class="lg:72 2xl:h-84 h-60 w-full md:h-64 xl:h-80" />
        </div>
      </button>
    </div>
    <div id="bg-section-blog" class="relative h-[100lvh]">
      <div
        id="purple-gradient-tr"
        class="absolute right-0 h-1/3 w-full bg-gradient-to-tr from-transparent via-transparent to-indigo-900/80 md:w-3/4 lg:w-1/2 xl:h-1/4"
      >
      </div>
    </div>
    <div id="bg-section-contact" class="relative h-[100lvh]">
      <div class="absolute bottom-0 w-full">
        <div
          class="absolute bottom-0 h-1/3 w-full bg-gradient-to-b from-transparent to-slate-900/75"
        >
        </div>
        <PlanetLandscape
          class="-ml-[95%] h-[450px] w-[1000px] md:ml-0 md:h-auto md:w-full"
        />
      </div>
    </div>
  </div>

  <main class="relative w-full overflow-x-clip">
    <section
      id="intro"
      class="mx-auto flex h-screen max-w-screen-md flex-col justify-center p-4 pr-2 md:px-8 md:pr-0 lg:px-0"
    >
      <h1
        class="-mt-20 text-5xl font-bold leading-[1.1] md:text-6xl md:leading-tight xl:text-7xl xl:leading-tight"
      >
        <span class="lightSpeed_h1web"
          >Web keep <span class="lightSpeed_h1evolve">evolving..</span></span
        >
        <span class="lightSpeed_h1fast block italic">
          ..really
          <span
            class="align-bottom text-[3.5rem] text-transparent [-webkit-text-stroke:2px_white] md:text-[4rem] 2xl:text-[5rem]"
          >
            fast!
          </span>
        </span>
      </h1>

      <p
        class="mt-4 text-lg leading-5 md:mt-6 md:text-xl md:leading-6 2xl:text-2xl"
      >
        <span style="--n:130" class="typing_p">
          It will keep expanding like the <span class="font-semibold italic"
            >galaxy.</span
          >
          <br />
          Be part of change, become one of the <span
            class="font-semibold italic">stars.</span
          >
          <br />
          Or you can stay with obsolete tech and <br class="md:hidden" /> die slowly
          <span class="font-semibold italic"> there!</span>&nbsp;
        </span>
      </p>
    </section>

    <section id="blog" class="relative h-screen w-full">
      <div
        class="mx-auto flex max-w-screen-md flex-col items-center px-4 md:px-8 lg:px-0"
      >
        <h2>
          <img
            src="/images/blog-stars.svg"
            class="-z-10 my-8 h-40 w-auto lg:h-auto"
            alt="blog post"
          />
        </h2>

        <div class="relative space-y-6 px-6">
          {
            blogPosts.map((article, idx) => (
              <a
                href={`/blog/${article.slug}`}
                rel="prefetch"
                id={`blog-${idx}`}
                class="group flex scale-100 overflow-visible transition-transform before:absolute before:left-0 before:top-0 before:-z-10 before:h-full before:w-full before:rounded-xl before:border before:border-accent-300 before:bg-gradient-to-r before:from-brand-900 before:to-brand-800 after:absolute after:left-0 after:top-0 after:-z-20 after:h-full after:w-full after:scale-100 after:bg-accent-700 after:blur-sm hover:scale-105 hover:cursor-pointer hover:after:blur-md active:scale-100"
              >
                <article>
                  <div class="relative h-fit w-full overflow-x-clip">
                    <h3 class="line-clamp-3 pl-6 pr-3 pt-2 text-xl leading-[22px] tracking-wide md:line-clamp-2 md:pr-4 md:pt-3 md:text-3xl md:leading-10">
                      {article.data.title}
                    </h3>
                    <div class="absolute -left-0 top-2 h-full w-0 border-[12px] border-transparent border-l-accent-300 transition-transform" />
                  </div>
                  <p class="mb-2 mt-3 line-clamp-3 px-3 text-xs leading-4 md:mb-4 md:mt-4 md:line-clamp-3 md:px-6 md:text-base md:leading-snug">
                    {article.data.description}
                  </p>
                </article>

                <div class="relative w-36 flex-none overflow-hidden rounded-r-xl bg-accent-300 p-[1px] pl-0 before:absolute before:-bottom-2 before:right-0 before:h-8 before:rotate-45 before:border-[10px] before:border-transparent before:border-l-accent-300 before:transition-all before:duration-300 before:ease-out group-hover:before:-translate-x-16 group-hover:before:opacity-0 md:w-48 ">
                  <Picture
                    alt={article.data.image.alt}
                    src={article.data.image.url.square}
                    widths={[160, 200, 240]}
                    sizes="(min-width: 768px) 100vw, (min-width: 1024px) 100vw"
                    aspectRatio="1:1"
                    class="rounded-r-xl"
                  />
                  <span class="text-body absolute -bottom-0 -right-24 h-[26px] rounded-br rounded-tl-xl bg-accent-300 px-3 pt-0.5 text-sm font-bold italic text-brand-900 opacity-0 transition-all duration-300 ease-out group-hover:-translate-x-24 group-hover:opacity-100">
                    read more
                  </span>
                </div>
              </a>
            ))
          }
        </div>
        <a
          rel="prefetch"
          class="relative mt-8 hidden px-6 font-head text-xl text-white transition-all after:absolute after:left-1/2 after:top-1/2 after:-z-10 after:h-0 after:w-full after:-translate-x-1/2 after:-translate-y-1/2 after:border-8 after:border-transparent after:border-x-accent-300 after:transition-transform after:duration-300 hover:cursor-pointer hover:tracking-widest hover:after:w-1/4 hover:after:-translate-y-[42.5%] hover:after:-rotate-90 active:after:scale-75 active:after:duration-100"
          >More articles</a
        >
      </div>
    </section>

