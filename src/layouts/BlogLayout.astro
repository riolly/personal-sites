---
import type { SeoProps } from "config";
type Fronmatter = Required<Pick<SeoProps, "frontmatter">>;
export interface Props extends Fronmatter {}

import Layout from "./MainLayout.astro";
import StarsBg from "components/ornaments/bg-stars.astro";

const { frontmatter } = Astro.props;
---

<Layout frontmatter={frontmatter}>
  <main class="relative overflow-clip">
    <StarsBg />
    <article
      class="prose prose-sm mx-auto max-w-screen-lg bg-gray-900 pb-8 shadow-xl shadow-slate-700 md:prose-base lg:prose-lg prose-headings:font-head prose-headings:text-blue-50 prose-h1:leading-snug prose-h1:tracking-wide prose-p:indent-6 prose-p:text-base prose-p:text-blue-100 prose-a:text-blue-300 prose-em:text-white prose-img:mt-0 md:prose-p:text-lg lg:prose-p:text-xl lg:prose-p:leading-normal"
    >
      <slot />
    </article>
  </main>
</Layout>
